{
  "version": 1,
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": 3000,
    "CDN_BASE_URL": "https://ilearnhow.up.railway.app/assets/avatars"
  }
}
